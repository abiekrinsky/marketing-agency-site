{
  "extends": "next/core-web-vitals",
  "ignorePatterns": ["**/*.js", "**/*.jsx", "**/*.ts", "**/*.tsx"],
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "rules": {
    "react/no-unescaped-entities": "off",
    "@typescript-eslint/no-unused-vars": "off"
  },
  "overrides": [
    {
      "files": ["**/*.ts", "**/*.tsx"],
      "rules": {
        "react/no-unescaped-entities": "off",
        "@typescript-eslint/no-unused-vars": "off"
      }
    }
  ]
} 